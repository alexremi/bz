{% extends 'base.html.twig' %}

{% block title %}Значения для признаков{% endblock %}

{% block body %}
    <h1>Значения для признаков</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Значение</th>
                <th>Признак</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for zn_pr in zn_prs %}
            <tr>
                <td>{{ zn_pr.id }}</td>
                <td>{{ zn_pr.priznaArea }}</td>
                <td>{{ zn_pr.pr }}</td>
                <td>
                    <a href="{{ path('zn_pr_show', {'id': zn_pr.id}) }}">Просмотр</a>
                    <a href="{{ path('zn_pr_edit', {'id': zn_pr.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('zn_pr_new') }}">Новая запись</a>
{% endblock %}
