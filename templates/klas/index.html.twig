{% extends 'base.html.twig' %}

{% block title %}Классы{% endblock %}

{% block body %}
    <h1>Классы</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for kla in klas %}
            <tr>
                <td>{{ kla.id }}</td>
                <td>{{ kla.name }}</td>
                <td>
                    <a href="{{ path('klas_show', {'id': kla.id}) }}">Просмотр</a>
                    <a href="{{ path('klas_edit', {'id': kla.id}) }}">Изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('klas_new') }}">Новая запись</a>
{% endblock %}
