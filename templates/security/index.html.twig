{% extends 'base.html.twig' %}
{% block title %}Hello SecurityController!{% endblock %}

{% block body %}
    <header class="navbar navbar-expand-md navbar-dark bg-primary">
        <div class="container-fluid">
            <ul class="navbar-nav flex-row">
                <li class="nav-item">
                    <a class="nav-link" href="/main">Вернуться на главную <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">Регистрация</a>
                </li>
            </ul>
        </div>
    </header>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <h1 class="mt-5 mb-4">Аутентификация</h1>

                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey }}
                    </div>
                {% endif %}

                <div id="login-form" class="card">
                    <div class="card-body">
                        <fieldset>
                            <form class="form-row" action="{{ path('login') }}" method="POST">
                                <div class="form-group mb-md-0 col-md-5">
                                    <input class="form-control" type="login" name="_username" value="{{ last_username }}" placeholder="Имя">
                                </div>
                                <div class="form-group mb-md-0 col-md-5">
                                    <input class="form-control" type="password" name="_password" placeholder="Пароль">
                                </div>
                                <div class="form-group mb-md-0 col-md-2">
                                    <input type="submit" class="btn btn-primary" value="Войти">
                                </div>

                            </form>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}