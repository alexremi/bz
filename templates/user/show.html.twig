{% extends 'base.html.twig' %}

{% block title %}Пользователь{% endblock %}

{% block body %}
    <h1>Пользователь</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Имя пользователя</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Пароль</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Роль</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">Назад</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
