{% extends 'base.html.twig' %}
{% block title %}Классификатор венчиков{% endblock %}
{% block body %}
  {{ include('header.html.twig') }}
  <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,300italic,400">
  <link type="text/css" rel="stylesheet" href="{{ asset('css/drop_box.css') }}">
  <link type="text/css" rel="stylesheet" href="https://translate.googleapis.com/translate_static/css/translateelement.css">

	<main class="container-fluid">
    <div class="row">
      <aside class="col-md-3 col-lg-2 bg-white pt-3">
        <ul class="nav nav-pills flex-column">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('artefacts_index') }}">Мои артефакты</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('guest1') }}">Классифицировать артефакт</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="{{ path('corolla') }}">Классифицировать профиль венчика</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('corolla_list') }}">Венчики</a>
          </li>
        </ul>
      </aside>
      <section class="col-md-9 col-lg-10 p-3" role="main">
        <form method="post" action="{{ path('corolla_classifier') }}" enctype="multipart/form-data" novalidate="" class="box has-advanced-upload">
          <div class="box__input">
            <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43"><path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"></path></svg>
            <input type="file" name="file" id="file" class="box__file">
            <label class="button__label" for="file">
              <strong>
                <span style="vertical-align: inherit;">
                  <span style="vertical-align: inherit;">Выберите файл </span>
                </span>
              </strong>
              <span class="box__dragndrop">
                <span style="vertical-align: inherit;">
                  <span style="vertical-align: inherit;">или перетащите его сюда</span>
                </span>
              </span>
              <span style="vertical-align: inherit;">
                <span style="vertical-align: inherit;">.</span>
              </span>
            </label>
            <button type="submit" class="box__button">
              <span style="vertical-align: inherit;">
                <span style="vertical-align: inherit;">
                  Узнать класс
                </span>
              </span>
            </button>
          </div>
          <div class="box__uploading">
            <span style="vertical-align: inherit;">
              <span style="vertical-align: inherit;">
                Загрузка ...
              </span>
            </span>
          </div>
          <div class="box__success">
            <span style="vertical-align: inherit;">
              <span style="vertical-align: inherit;">
                Готово!
              </span>
            </span>
          </div>
          <div class="box__error">
            <span style="vertical-align: inherit;">
              <span style="vertical-align: inherit;">
                Ошибка!
              </span>
            </span>
            <a href="{{ path('corolla_classifier') }}" class="box__restart" role="button">
              <span style="vertical-align: inherit;">
                <span style="vertical-align: inherit;">
                  Попробуй еще раз!
                </span>
              </span>
            </a>
          </div>
          <input type="hidden" name="ajax" value="1">
        </form>
        <div class="to_database">
          <label for="to_database_checkbox">Сохранить в базу данных: </label>
          <input class="checkbox" id="to_database_checkbox" type="checkbox" value="false" onclick="$(this).val(!!this.checked)">
        </div>
        <div class="class">
          Класс: <span id="class_name"></span>
        </div>
      </section>
    </div>
  </main>
{% endblock %}
{% block javascripts %}
  <script type="text/javascript" rel="script" src="{{ asset('js/drop_box.js') }}"></script>
{% endblock %}