{% extends 'base.html.twig' %}
{% block title %}Manage Account!{% endblock %}
{% block body %}
    {{ include('header.html.twig') }}

    <main class="container-fluid">
        <div class="row">
            <aside class="col-md-3 col-lg-2 bg-white pt-3">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Мои артефакты</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/guest">Классифицировать артефакт</a>
                    </li>

                </ul>
            </aside>
            <section class="col-md-9 col-lg-10 p-3" role="main">
                <a href="{{ path('artefacts_new') }}" class="btn btn-success">Create new</a>
                <table class="table bg-white">
                    <thead>
                    <tr>
                        <th width="20">Id</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Place</th>
                        <th>Period</th>
                        {% if is_granted('ROLE_ADMIN') %}
                            <th>user</th>
                        {% endif %}
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for artefact in artefacts %}
                        <tr>
                            <td>{{ artefact.id }}</td>
                            <td>{{ artefact.name }}</td>
                            <td>{{ artefact.date ? artefact.date|date('Y-m-d') : '' }}</td>
                            <td>{{ artefact.place }}</td>
                            <td>{{ artefact.period }}</td>
                            {% if is_granted('ROLE_ADMIN') %}
                                <td>{{ artefact.user }}</td>
                            {% endif %}
                            <td>
                                <div class="btn-group" role="group" >
                                    <a href="{{ path('artefacts_show', {'id': artefact.id}) }}" class="btn btn-info">show</a>
                                    <a href="{{ path('artefacts_edit', {'id': artefact.id}) }}" class="btn btn-warning">edit</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
        </div>
    </main>

{% endblock %}
