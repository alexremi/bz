<form method="post" action="{{ path('artefacts_delete', {'id': artefact.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить эту запись?');">
    <input type="hidden" name="_method" value="Удалить">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artefact.id) }}">
    <button class="btn">Удалить</button>
</form>
