{% extends 'base.html.twig' %}

{% block title %}Артефакты{% endblock %}

{% block body %}
    <h1>Артефакты</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artefact.id }}</td>
            </tr>
            <tr>
                <th>Название</th>
                <td>{{ artefact.name }}</td>
            </tr>
            <tr>
                <th>Изображение</th>
                <td>
                    <img style="width: 20ex; height: auto; border-radius: 5px" src="{{ asset('uploads/artefact/' ~ artefact.image) }}" alt="">
                </td>
            </tr>
            <tr>
                <th>Дата</th>
                <td>{{ artefact.date ? artefact.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Место</th>
                <td>{{ artefact.place }}</td>
            </tr>
            <tr>
                <th>Период</th>
                <td>{{ artefact.period }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artefacts_index') }}">Назад к списку</a>

    <a href="{{ path('artefacts_edit', {'id': artefact.id}) }}">Изменить</a>

    {{ include('artefacts/_delete_form.html.twig') }}
{% endblock %}
