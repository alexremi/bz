{% extends 'base.html.twig' %}

{% block title %}Artefacts{% endblock %}

{% block body %}
    <h1>Artefacts</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artefact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artefact.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ artefact.date ? artefact.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ artefact.place }}</td>
            </tr>
            <tr>
                <th>Period</th>
                <td>{{ artefact.period }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('artefacts_index') }}">back to list</a>

    <a href="{{ path('artefacts_edit', {'id': artefact.id}) }}">edit</a>

    {{ include('artefacts/_delete_form.html.twig') }}
{% endblock %}
